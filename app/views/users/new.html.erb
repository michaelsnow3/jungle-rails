<h1 class="signup">Signup!</h1><hr>

<%= form_for @user do |form| %>

  <%# checks for submission errors and displays if necessary %>
  <% if form.object.errors.any? %>
    <div class="alert alert-danger">
      <strong>The following errors prevented saving:</strong>
      <ul>
        <% form.object.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# signup form input fields %>
  <label>First Name: </label><%= form.text_field :first_name %>
  <br>
  <label>Last Name: </label><%= form.text_field :last_name %>
  <br>
  <label>Email: </label><%= form.text_field :email %>
  <br>
  <label>Password: </label><%= form.password_field :password %>
  <br>
  <label>Password Confirmation: </label><%= form.password_field :password_confirmation %>
  <br>
  <%= form.submit "Submit" %>

<% end %>