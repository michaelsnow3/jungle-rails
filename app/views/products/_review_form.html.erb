<h3>Add a review: </h3>
<%= form_for [@product, @review] do |form| %>

  <div class="form-group">
    <%= form.label :description %><br>
    <textarea name="description"></textarea>
  </div>
  <div class="form-group">
    <%= form.label :rating %>: 
    <%= form.select :rating, [1, 2, 3, 4, 5] %>
  </div>
  <%= form.submit "Submit", class: 'btn btn-primary' %>

<% end %>
<hr>